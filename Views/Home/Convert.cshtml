
  @model UnitConverterViewModel
  @{
    ViewData["Title"] = "Temperature Conversion";
  }
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<form class="form-horizontal"
            asp-action="Conversion"
            method="POST" role="form"> 
            <fieldset><legend>Temperature Conversion</legend>            
				<div class="form-group">
					 
					<label asp-for="InputValue" class="col-sm-2 control-label" >
						Temperature To Convert:
					</label>
					<div class="col-sm-10">
						<input type="number" class="form-control" asp-for="InputValue" />
					</div>
				</div>
                <div class="form-group">
                <label asp-for="Operator"></label>
                <select class="form-control" asp-for="Operator">
                        <option>Kelvin To Celsius</option>
                        <option>Kelvin To Fahrenheit</option>
                        <option>Fahrenheit to Celsius</option>
                        <option>Fahrenheit to Kelvin</option>
                        <option>Celsius to Fahrenheit</option>
                        <option>Celsius to Kelvin</option>
                </select>
                </div>						
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						 
						<button type="submit" class="btn btn-default">
							Convert
						</button>
					</div>
				</div>
                </fieldset>
			</form>
		</div>
	</div>
</div>